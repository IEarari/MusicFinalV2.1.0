<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"                android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.advancemusic.Details">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song Details : "
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This Activity is Showing the Song Ditals With Return to song textview button"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Singer : Mohamed Al Ali \nTransfer :Mohammed Sobhi \nWords Written By : Amer Lawand "
        android:textSize="18sp" />
    <TextView
        android:id="@+id/rts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Return To The Song "
        android:onClick="ReturnToSong"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>